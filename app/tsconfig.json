{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "lib": ["dom", "dom.iterable", "esnext"],
        "outDir": "dist",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true
    },
    "include": ["src/**/*.ts", "../package/**/*.d.ts", "../package/src/async/types.ts", "../package/src/sync/types.ts"],
    "exclude": ["node_modules", "./cypress"]
}
