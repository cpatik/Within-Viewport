{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["dom", "dom.iterable", "esnext"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "../module/dist",
        "rootDir": "../module",
        "baseUrl": "../module",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "typeRoots": ["../node_modules/@types", "../module/types"],
        "forceConsistentCasingInFileNames": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": ["cypress", "node", "jest"],
        "skipLibCheck": true
    },
    "include": [
        "../module/src/**/*.ts*",
        "../module/cypress.config.ts",
        "../module/cypress/**/*.ts",
        "../module/jest.config.ts"
    ],
    "exclude": ["../node_modules", "../module/node_modules"]
}
